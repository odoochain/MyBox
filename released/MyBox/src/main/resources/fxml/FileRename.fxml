<VBox fx:id="thisPane" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="500.0" spacing="5.0" BorderPane.alignment="CENTER" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mara.mybox.controller.FileRenameController">
    <children>
        <HBox alignment="CENTER_LEFT" spacing="5.0">
            <children>
                <Label text="%OriginalFileName" />
                <Label layoutX="20.0" layoutY="20.0" text="：" />
            </children>
        </HBox>
        <Label fx:id="fileLabel" minHeight="-Infinity" wrapText="true" />
      <Separator prefWidth="200.0" />
        <HBox alignment="CENTER_LEFT" layoutX="20.0" layoutY="20.0" spacing="5.0">
            <children>
                <Label text="%NewFileName" />
                <Label layoutX="20.0" layoutY="20.0" text="：" />
            </children>
        </HBox>
        <HBox alignment="CENTER_LEFT" layoutX="20.0" layoutY="100.0" spacing="5.0">
            <children>
                <Label fx:id="pathLabel" minWidth="-Infinity" wrapText="true" HBox.hgrow="NEVER" />
                <TextField fx:id="nameInput" />
                <Label fx:id="suffixLabel" layoutX="20.0" layoutY="20.0" minWidth="-Infinity" HBox.hgrow="NEVER" />
            </children>
        </HBox>
      <Label minHeight="-Infinity" text="%FileNameFilterComments" VBox.vgrow="NEVER" />
        <HBox alignment="CENTER_LEFT" layoutX="20.0" layoutY="20.0" spacing="5.0">
            <children>
                <Label maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
                <Button fx:id="okButton" defaultButton="true" mnemonicParsing="false" onAction="#okAction">
                    <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../buttons/Red/iconOK.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </children>
        </HBox>
    </children>
    <BorderPane.margin>
        <Insets />
    </BorderPane.margin>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</VBox>
