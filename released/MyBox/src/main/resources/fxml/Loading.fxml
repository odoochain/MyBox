<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="thisPane" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="300.0" prefWidth="600.0" spacing="10.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mara.mybox.controller.LoadingController">
    <children>
        <ProgressIndicator fx:id="progressIndicator">
            <VBox.margin>
                <Insets bottom="20.0" top="10.0" />
            </VBox.margin>
        </ProgressIndicator>
        <Label fx:id="timeLabel" minHeight="-Infinity" minWidth="-Infinity" wrapText="true" VBox.vgrow="NEVER" />
        <Label fx:id="infoLabel" minHeight="-Infinity" minWidth="-Infinity" text="..." wrapText="true" VBox.vgrow="NEVER" />
        <HBox alignment="CENTER" spacing="20.0">
            <children>
                <Button fx:id="myboxBuuton" mnemonicParsing="false" onAction="#mybox">
                    <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../buttons/iconMyBox.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#cancelAction">
                    <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../buttons/Red/iconCancel.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </children>
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </HBox>
    </children>
</VBox>
